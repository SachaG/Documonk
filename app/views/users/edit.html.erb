<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %> <span class="small">(leave blank if you don't want to change it)</span><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :twitteraccount %><br />
    <%= f.text_field :twitteraccount %>
  </div>
	<% if @user.role?(:admin) %>
	  <div class="field">
	    <%= f.label :role %><br />
	    <%= f.text_field :role %>
	  </div>
	<% end %>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>